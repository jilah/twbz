/* modals.js */

        (function($) {
            "use strict";
                $(document).ready(function() {
                        $('.button green arrow').on('click', function() {
                        $('body').addClass("modal-open");
                    });
                    $('.close-modal').on('click', function() {
                        $('body').removeClass("modal-open");
                    });
                });
        }(jQuery));
